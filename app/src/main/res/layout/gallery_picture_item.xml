<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/galleryImageView"
        android:layout_width="@dimen/gallery_imageView_width"
        android:layout_height="@dimen/gallery_imageView_height"
        android:layout_marginStart="@dimen/gallery_imageView_marginStart"
        android:layout_marginEnd="@dimen/gallery_imageView_marginEnd"
        android:layout_marginTop="@dimen/gallery_imageView_marginTop"
        android:layout_marginBottom="@dimen/gallery_imageView_marginBottom"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/hello_background" />

    <TextView
        android:id="@+id/gallery_picture_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center_horizontal"
        />
</FrameLayout>